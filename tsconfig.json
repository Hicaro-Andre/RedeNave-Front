{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,                    // ← MUDAR PARA false
    "noImplicitAny": false,             // ← ADICIONAR (permite parâmetros sem tipo)
    "strictNullChecks": false,          // ← ADICIONAR
    "strictFunctionTypes": false,       // ← ADICIONAR
    "strictBindCallApply": false,       // ← ADICIONAR
    "strictPropertyInitialization": false, // ← ADICIONAR
    "noImplicitThis": false,            // ← ADICIONAR
    "alwaysStrict": false,              // ← ADICIONAR
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
  "exclude": ["node_modules"]
}